<%= form_with model: @article, local: true do |form| %>
<% if @article.errors.any? %>

<div id="error_explanation">
  <h2>
    <%= pluralize(@article.errors.count, "erros") %> impedindo este artigo seja salvo:
  </h2>
  <ul>
    <% article.errors.full_messages.each do |msg| %>
    <li><%= msg %></li>
    <% end %>
  </ul>
</div>

<% end %>

<section class="section">
  <div class="container">
    <div class="column is-three-quarters">
      <div class="level-center">
        <div class="field">
          <label class="label titleForm">Insira um título:</label>
          <div class="control">
            <input class="input" id="article_title" name="article[title]" type="text" placeholder="Ex: Entenda o que é DIY">
          </div>
        </div>

        <div class="field">
          <label class="label titleForm">Escreva sua publicação:</label>
          <div class="control">
            <textarea class="textarea" id="article_text" name="article[text]" placeholder="Ex: Você já deve ter visto..."></textarea>
          </div>
        </div>

        <div class="level-item">
          <div class="control">
            <%= link_to '<button class="button">Voltar ao painel</button>'.html_safe, articles_path %>
            <button class="button is-primary" type="submit">Publicar</button>
          </div>
        </div>

      </div>
    </div>
  </div>
</section>

<% end %>
